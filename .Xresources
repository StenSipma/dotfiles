!---------------------!
! urxvt configuration !
!---------------------!

! Disable the scrollbar
URxvt.scrollBar: false

! Set the font
!Xft.font: Noto Sans 12
!Xft.font: Noto Sans:size=12
URxvt.font: xft:SourceCodePro:size=15
URxvt.letterSpace: -1

! Enable Transparency
! Not sure what 'depth' is used for
! [x] The opacity level x in percentages
! and background color after
URxvt.depth: 32

! Arc Dark color scheme
! by fsckoff (http://wr3tch.com)
! based on the arc dark wm/de themes
URxvt.background: [70]#2f343f
URxvt.foreground: #d7d7d7
URxvt.cursorColor: #c7c7c7
URxvt.highlightTextColor: #383c4a
URxvt.highlightColor: #c1ddff
! black
URxvt.color0:       #383c4a
URxvt.color8:       #383c4a
! red
URxvt.color1:       #e28d9d
URxvt.color9:       #e28d9d
! green
URxvt.color2:       #bfd888
URxvt.color10:      #bfd888
! yellow
URxvt.color3:       #df936c
URxvt.color11:      #df936c
! blue
URxvt.color4:       #5294e2
URxvt.color12:      #5294e2
! magenta
URxvt.color5:       #f74771
URxvt.color13:      #f74771
! cyan
URxvt.color6:       #7c818c
URxvt.color14:      #7c818c
! white
URxvt.color7:       #d7d7d7
URxvt.color15:      #d7d7d7

!-----------------------!
! General configuration !
!-----------------------!

Xcursor.theme: whiteglass
